  %head
    %meta{ :charset => "utf-8"}

    -# Always force latest IE rendering engine (even in intranet) & Chrome Frame
    -# Remove this if you use the .htaccess
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/

    %title="Matthieu Maury webpage"

    %meta{ :name => "description", :content => ""}
    %meta{ :name => "author", :content => ""}

    -# Mobile viewport optimized
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/

    -# %link{ :rel => "stylesheet", :href => "css/bootstrap.css"}/
      = stylesheet_link_tag 'bootstrap'
      :css
        body {
          padding-top: 60px;
          padding-bottom: 40px;
        }

    -# %link{ :rel => "stylesheet", :href => "css/responsive.css"}/
      = stylesheet_link_tag 'responsive'
    -# %link{ :rel => "stylesheet", :href => "css/style.css"}/
    = stylesheet_link_tag 'style'
 
    -# %script{ :src => "js/libs/modernizr-2.5.3-respond-1.1.0.min.js" }
    = javascript_include_tag 'libs/modernizr.min.js'

  %body

    #container
      %header
        .row
          .span4
            %h1 Matthieu Maury

      #main{ :role => "main"}
        .row
          .span2{ :class => "offset2"}
            %ul{ :class => "nav nav-list"}
              %li= link_to 'About me', '/'
              %li= link_to 'My resume', '/files/matthieu_maury_resume.pdf'
              %li= link_to 'Geo Resume', '/georesume'
              %li.divider
              - link_icon = image_tag('github-icon.png', :alt => 'Github icon', :class => 'icon')
              %li= link_to 'Github' + link_icon, 'https://github.com/Mayeu'
              - link_icon = image_tag('twitter-icon.png', :alt => 'Twitter icon', :class => 'icon')
              %li= link_to 'Twitter' + link_icon, 'https://twitter.com/Mayeu'
              - link_icon = image_tag('linkedin-icon.png', :alt => 'linkedin icon', :class => 'icon')
              %li= link_to 'linkedin' + link_icon, 'https://www.linkedin.com/in/mmaury/en'

          .span8
            = yield

      %footer

